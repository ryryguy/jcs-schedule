# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Leagues
GET     /leagues                    controllers.Application.leagues
POST    /leagues                    controllers.Application.newLeague
GET     /league/:id                 controllers.Application.league(id: Long)
GET     /league/:id/toggle          controllers.Application.toggleLeague(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
